.login-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 60rpx;
}

.system-title {
  font-size: 48rpx;
  color: #fff;
}

.login-form {
  width: 80%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.login-input {
  border-radius: 16rpx;
  --cell-background-color: #fff6;
}
